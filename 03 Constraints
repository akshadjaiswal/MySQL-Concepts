
CREATE TABLE student (
  student_id INT PRIMARY KEY AUTO_INCREMENT, --Auto increment the value of student_id.
  name VARCHAR(40) NOT NULL,                 --NOT NULL is a constraint use to make a table should not be null.
  -- name VARCHAR(40) UNIQUE,                --UNIQUE is use to every value should be unique.
  major VARCHAR(40) DEFAULT 'undecided',     --undecided is used to set a default value.
);
